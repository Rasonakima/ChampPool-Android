<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainAppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ContextualTheme</item>
    </style>

    <style name="ToolbarTheme" parent="android:ThemeOverlay.Material.Light">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
    </style>

    <style name="PopupTheme" parent="android:ThemeOverlay.Material.Light">
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
    </style>

    <style name="ContextualTheme" parent="android:Widget.Material.ActionMode">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ContextTextStyle</item>
        <item name="subtitleTextStyle">@style/ContextTextStyle</item>
        <!--<item name="actionModeCloseDrawable">@drawable/ic_account_circle_black_24dp</item>-->
        <!--<item name="android:actionModeCloseDrawable">@drawable/ic_account_circle_black_24dp</item>-->
    </style>

    <style name="ContextTextStyle" parent="android:TextAppearance.Material.Widget.ActionMode.Title">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>